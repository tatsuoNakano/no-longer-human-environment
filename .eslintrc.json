{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    /* [ Structural Integrity ]
       Enforce strict limits to prevent human-like spaghetti code.
    */
    "complexity": ["error", 3],
    "max-depth": ["error", 2],
    "max-lines-per-function": ["error", 20],
    "max-params": ["error", 2],

    /* [ Type Safety ]
       Total elimination of ambiguity. No "any", no exceptions.
    */
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/explicit-function-return-type": "error",
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],

    /* [ Logical Rigor ]
       Prevent implicit bugs and maintain mathematical correctness.
    */
    "no-implicit-coercion": "error",
    "eqeqeq": ["error", "always"],
    "no-console": "warn",
    "prefer-const": "error"
  },
  "env": {
    "node": true,
    "jest": true
  }
}